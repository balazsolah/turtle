import turtle               
window = turtle.Screen()        
alex = turtle.Turtle() 

def rajz(szogek_szama, szin):
    
     hossz=50
     alex.color(szin)
     for i in range (szogek_szama):
         alex.forward(hossz)      
         alex.left(360/szogek_szama)
for i in range (3,12):
    rajz(i,'purple')
